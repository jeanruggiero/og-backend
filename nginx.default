# nginx configuration

server {
    listen 443 ssl;
    server_name api.highlift.io;
    ssl_certificate

    location / {
        proxy_pass http://127.0.0.1:8010;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static {
        root /opt/app/og_backend;
    }
}